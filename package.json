{
  "name": "luxuria-backend",
  "version": "0.0.6",
  "description": "",
  "author": "Sam Bulatov (stylesam)",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db": "mongod --port 27017 --dbpath ./dbdata",
    "serve:dev": "concurrently -k -p \"[{name}]\" -n \"Node,Mongo\" -c \"blue.bold,cyan.bold,green.bold\" \"npm run start:dev\" \"npm run db\"",
    "serve:debug": "concurrently -k -p \"[{name}]\" -n \"Node,Mongo\" -c \"blue.bold,cyan.bold,green.bold\" \"npm run start:debug\" \"npm run db\""
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.2.0",
    "@nestjs/websockets": "^6.2.0",
    "bcrypt": "^3.0.5",
    "dayjs": "^1.8.14",
    "mongoose": "^5.4.19",
    "nest-schedule": "^0.5.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "rxjs": "^6.3.3",
    "typegoose": "^5.6.0"
  },
  "devDependencies": {
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/testing": "^6.0.3",
    "@types/bcrypt": "^3.0.0",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/mongoose": "^5.3.23",
    "@types/node": "^10.12.18",
    "@types/passport-jwt": "^3.0.1",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.7",
    "chalk": "^2.4.2",
    "class-validator": "^0.9.1",
    "codelyzer": "^5.0.0-beta.1",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "morgan": "^1.9.1",
    "nestjs-typegoose": "^5.1.2",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "supertest": "^3.4.1",
    "swagger-ui-express": "^4.0.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.4",
    "yaml": "^1.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
